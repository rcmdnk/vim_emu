<?xml version="1.0"?>
<root>
  <block>
    <config_only>notsave.vim_emu_normal{{VIM_EMU_ALTCONFIG}}</config_only>
    <autogen> <!-- Shift-{{VIM_EMU_YDC_CHAR}} -->
      __KeyToKey__ KeyCode::{{VIM_EMU_YDC_CHAR}},
      MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_SHIFT|ModifierFlag::NONE,
      {{VIM_EMU_BEFORE_MOVE}},
      KeyCode::E, ModifierFlag::CONTROL_L|ModifierFlag::SHIFT_L,
      {{VIM_EMU_AFTER_MOVE}}
    </autogen>
    <!-- Start {{VIM_EMU_YDC_CHAR}} command -->
    <block>
      <config_not>notsave.vim_emu_{{VIM_EMU_YDC_CHAR}}{{VIM_EMU_ALTCONFIG}}</config_not>
      <autogen>
        __KeyToKey__ KeyCode::{{VIM_EMU_YDC_CHAR}}, ModifierFlag::NONE,
        KeyCode::VK_CONFIG_FORCE_ON_notsave_vim_emu_{{VIM_EMU_YDC_CHAR}}{{VIM_EMU_ALTCONFIG}},
        KeyCode::VK_CONFIG_FORCE_ON_notsave_vim_emu_oneshot{{VIM_EMU_ALTCONFIG}}
      </autogen>
    </block>
  </block>

  <block> <!-- {{VIM_EMU_YDC_CHAR}} MODE -->
    <config_only>notsave.vim_emu_oneshot{{VIM_EMU_ALTCONFIG}}</config_only>
    <config_only>notsave.vim_emu_{{VIM_EMU_YDC_CHAR}}{{VIM_EMU_ALTCONFIG}}</config_only>
    <autogen> <!-- {{VIM_EMU_YDC_CHAR}}{{VIM_EMU_YDC_CHAR}} -->
      __KeyToKey__ KeyCode::{{VIM_EMU_YDC_CHAR}}, ModifierFlag::NONE,
      {{VIM_EMU_BEFORE_MOVE}},
      KeyCode::A, ModifierFlag::CONTROL_L,
      KeyCode::CURSOR_RIGHT, ModifierFlag::COMMAND_L|ModifierFlag::SHIFT_L,
      {{VIM_EMU_AFTER_MOVE}},
      KeyCode::VK_CONFIG_FORCE_ON_notsave_vim_emu_line_copy{{VIM_EMU_ALTCONFIG}},
    </autogen>
    <include path="vim_emu_move.xml">
      <replacementdef>
        <replacementname>VIM_EMU_USE_SHIFT</replacementname>
        <replacementvalue>
          ModifierFlag::SHIFT_L|
        </replacementvalue>
      </replacementdef>
    </include>
  </block>
</root>
